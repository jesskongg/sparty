extend layout

block content
  h3= title
  div.container
    form(method='POST' action='')
      div(class="form-group")
        label(for="room_name") Room Name
        input#room_name(type="text" class="form-control" placeholder="Enter room name" name='room_name' required='true' value=(undefined===room ? '' : room.name))
      div.form-group
        label(for="room_key") Room Key
        input#room_key(type="text" class="form-control" placeholder="Enter room key" name='room_key' required='true' value=(undefined===room ? '' : room.key))
      div.form-group
        label(for="room_avatar") Room Photo
        input#room_avatar(type="text" class="form-control" placeholder="Photo url" name='room_avatar' value=(undefined===room ? '' : room.avatar))
      div(class="form-group form-check")
        input#room_type(type="checkbox" class="form-check-input" name='room_type' value="private")
        label(class="form-check-label" for="room_type") Private Room
      button(type="submit" class="btn btn-primary") Submit

    if errors 
      ul
        for error in errors
          li!= error.msg
