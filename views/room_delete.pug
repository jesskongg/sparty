extend layout

block content
  #content.subcontent.container
    #roomDetailContent.row.justify-content-center.text-center
      #roomList.col-12
        .row
          .col-md-6.col-lg-4
            .card.border-0
              a(href=room.getUrl())
                img.card-img-top.scale-on-hover(src=room.avatar alt='Card Image')
              .card-body
                h6
                  a(href=room.getUrl()) Room No.
                p.text-muted.card-text Description
              form#delete_form(method='POST' action='')
                div.form-group
                  input#roomId.form-control(type='hidden',name='roomId', required='true', value=room.id)
                button.btn.btn-danger(type='submit') Delete
