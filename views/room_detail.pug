extend layout

block content
  br
  h5 Welcome to #{room.name} (<span id='num_peope'></span>&nbsp;people in the room)
  script.
    var roomId = #{room.id}
  
  <!-- Search -->
  div(class="form-inline my-2 my-lg-0")
    input#query(class="form-control mr-sm-2" type="search" placeholder="song name" name='query' aria-label="Search" value='')
    <!-- Button trigger modal -->
    button#search(class="btn btn-outline-success my-2 my-sm-0" data-toggle="modal" data-target="#searchModal" type="submit") Search

  <!-- Modal -->
  div(class="modal fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true")
    div(class="modal-dialog" role="document")
      div(class="modal-content")
        div(class="modal-header")
          h4(class="modal-title" id="exampleModalLongTitle")
          button(class="close" data-dismiss="modal" aria-label="Close")
            <span aria-hidden="true">&times;</span>
        div(class="modal-body")
          //- ...
        div(class="modal-footer")
          button#close(class="btn btn-secondary" data-dismiss="modal") Close
  
  div#candidates(class='container')
  
  if (isOwner)
    a.button.btn.btn-primary(href=room.getUrl() + '/update') Edit Room

  button#transfer Transfer
  button#play Playing
  button#pause Pause
  button#next Next

  script(src='/socket.io/socket.io.js')
  script(src='/scripts/room.js')
  if (isOwner)
    script(src='https://sdk.scdn.co/spotify-player.js')
    script(src='/scripts/spotify_sdk.js')
    script.
      var access_token = !{JSON.stringify(token)}
  
