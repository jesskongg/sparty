    link(rel='stylesheet' href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet' href='/stylesheets/styles.min.css')
    
  body
    .content
      block navigation
        nav.navbar.navbar-dark.navbar-expand-lg.fixed-top.bg-white.portfolio-navbar.gradient
          .container
            a.navbar-brand.logo(href='/') Sparty
            button.navbar-toggler(data-toggle='collapse' data-target='#navbarNav')
              span.sr-only Toggle navigation
              span.navbar-toggler-icon
            #navbarNav.collapse.navbar-collapse
              ul.nav.navbar-nav.ml-auto
                li.nav-item(role='presentation')
                  a.nav-link.active(href='/') Home
                if (!loggedIn)
                  li.nav-item(role='presentation')
                    a.nav-link(href='/api/auth/login') Login
                else
                  li.nav-item(role='presentation')
                    a.nav-link(href='/api/auth/logout') Logout
                  li.nav-item(role='presentation')
                    a.nav-link(href='/api/room/create') Create Room
                if (isOwner)
                  li.nav-item(role='presentation')
                    a.nav-link(href=room.getUrl() + '/update') Edit Room
                  li.nav-item(role='presentation')
                    a.nav-link(href=room.getUrl() + '/delete') Delete Room

      block content
      
    block footer
      footer(class="page-footer")
        div.container
          div(class="links")
            a(href="#") About
            a(href="#") Contact
            a(href="#") Guide
          div(class="social-icons")
            a(href="#")
              i(class="icon ion-social-linkedin")
            a(href="#")
              i(class="icon ion-social-github")
            a(href="#")
              i(class="icon ion-social-twitter")
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
